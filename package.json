{
  "name": "cryptographer.js",
  "version": "1.0.14",
  "description": "High-performance cryptographic algorithms for Node.js using WebAssembly",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "wasm_packages",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build:wasm": "bash scripts/build.sh",
    "build:ts": "tsc",
    "build": "npm run build:wasm && npm run build:ts && npm run copy:wasm",
    "clean": "bash scripts/clean.sh && rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "echo 'No tests configured yet'",
    "benchmark": "cd benchmark && bun run src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "release": "semantic-release",
    "validate": "npm run lint && npm run format:check",
    "precommit": "lint-staged",
    "copy:wasm": "cp -r wasm_packages dist/"
  },
  "keywords": [
    "crypto",
    "cryptography",
    "wasm",
    "webassembly",
    "hash",
    "cipher",
    "hmac",
    "sha",
    "md5",
    "aes",
    "blake2",
    "blake3",
    "argon2",
    "bcrypt",
    "pbkdf2",
    "performance",
    "rust",
    "nodejs",
    "security",
    "encryption",
    "hashing",
    "key-derivation"
  ],
  "author": {
    "name": "Wilson Tran",
    "email": "wilsontran@ronus.io",
    "url": "https://github.com/wstran"
  },
  "maintainers": [
    {
      "name": "Wilson Tran",
      "email": "wilsontran@ronus.io",
      "url": "https://github.com/wstran"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wstran/cryptographer.git"
  },
  "bugs": {
    "url": "https://github.com/wstran/cryptographer/issues"
  },
  "homepage": "https://github.com/wstran/cryptographer#readme",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/wstran"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^22.0.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "packageManager": "npm@10.0.0"
}
